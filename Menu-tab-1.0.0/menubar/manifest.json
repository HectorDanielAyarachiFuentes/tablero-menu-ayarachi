{
  "manifest_version": 3,
  "name": "Tablero - Nueva Pestaña",
  "version": "1.0.0",
  "description": "Un tablero personalizable para tu página de nueva pestaña.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": [
    "storage",
    "geolocation"
  ],
  "web_accessible_resources": [{
    "resources": ["menubar/lib/idb-keyval.js"],
    "matches": ["<all_urls>"]
  }]
}